<div class="container">
  <h2>New Game</h2>
  <div class="letter">
  <%= @letters %>
  </div>

  <form action="/score" method="post" class="word">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="word">What is the longest word you can find ?</label>
      <input type="hidden" value="<%= @letters.join %>" name="letters">
      <input type="text" name="word" id="word">
      <input type="submit" value="Play!">
  </form>
</div>
